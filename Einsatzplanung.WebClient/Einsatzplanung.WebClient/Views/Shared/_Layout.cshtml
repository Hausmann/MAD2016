@using Einsatzplanung.WebClient.Extensions

<!DOCTYPE html>
<html lang="de">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Einsatzplanungstool</title>
	@Styles.Render("~/css/style.css")
	@Scripts.Render("~/Scripts/jquery.min.js")
	@Scripts.Render("~/Scripts/AzubiListe.js")
</head>
<body>
	<header>
		<div id="logo"><img src="~/img/Datev_Logo.png" /></div>
		<div id="userID">
			<div id="infoText">Angemeldet als: </div>Mustermann, Max
		</div>
		<nav>
			<ul id="nav-links">
				<li>@Html.ActionMenuItem("Startseite", "Index", "Home")</li>
				<li>@Html.ActionMenuItem("Azubi-Liste", "AzubiListe", "Home")</li>
				<li>@Html.ActionMenuItem("Einsatzort", "Einsatzort", "Home")</li>
				<li>@Html.ActionMenuItem("Einsatz", "Einsatz", "Home")</li>
				<li>@Html.ActionMenuItem("Einsatzortansicht", "Einsatzortansicht", "Home")</li>
				<li>@Html.ActionMenuItem("Ausbilder", "Ausbilder", "Home")</li>
			</ul>
		</nav>
	</header>
	<div id="shadow">
		<div id="main">
			@RenderBody()
		</div>

		<footer>
			Footer
		</footer>
	</div>
</body>
</html>